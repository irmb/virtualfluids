BootStrap: docker
From: ubuntu:20.04

%files
    3rdParty 3rdParty
    apps apps
    CMake CMake
    Python Python
    src src
    CMakeLists.txt CMakeLists.txt
    cpu.cmake cpu.cmake
    gpu.cmake gpu.cmake
    setup.py setup.py
    pyproject.toml pyproject.toml

%post
    apt-get update &&          \
    apt-get install -y         \
    build-essential            \
    cmake=3.16.3-1ubuntu1      \
    openmpi-bin=4.0.3-0ubuntu1 \
    libomp-dev

    mkdir -p build && \
    cmake -DBUILD_VF_CPU=ON -DBUILD_VF_UNIT_TESTS=ON &&\
    make -j4 2>&1

%runscript
    bin/basicsTest
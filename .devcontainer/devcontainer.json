{  
    "name": "virtual-fluids-env",  
    "extensions": [  
    "twxs.cmake",  
    "mhutchie.git-graph",  
    "donjayamanne.githistory",  
    "ms-vscode.cpptools",
    "ms-vscode.cpptools-extension-pack",
    "xaver.clang-format",  
    "notskm.clang-tidy"  
    ],  
    "runArgs": ["--gpus","all"],  
    "image": "git.rz.tu-bs.de:4567/irmb/virtualfluids/ubuntu20_04:1.2",
    "containerEnv": {"HOME": "/workspaces/"},
    "mounts": [
        "source=/mnt/d/output,target=/${containerWorkspaceFolder}/output,type=bind,consistency=cached", 
        "source=${localEnv:HOME}/STLs,target=${containerWorkspaceFolder}/stl,type=bind,consistency=cached",    
        // https://code.visualstudio.com/remote/advancedcontainers/add-local-file-mount
        // https://code.visualstudio.com/docs/remote/devcontainerjson-reference#_variables-in-devcontainerjson
    ]
}